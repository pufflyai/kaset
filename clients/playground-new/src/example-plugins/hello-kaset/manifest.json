{
  "id": "hello-kaset",
  "name": "Hello Kaset",
  "version": "0.1.0",
  "api": "^1.0.0",
  "entry": "index.js",
  "description": "Hello Kaset plugin for OPFS.",
  "dependencies": {
    "react": "https://esm.sh/react@19.1.1/es2022/react.mjs",
    "react/jsx-runtime": "https://esm.sh/react@19.1.1/es2022/jsx-runtime.mjs",
    "react-dom/client": "https://esm.sh/react-dom@19.1.1/es2022/client.mjs",
    "react-dom": "https://esm.sh/react-dom@19.1.1/es2022/react-dom.mjs"
  },
  "settingsSchema": {
    "type": "object",
    "properties": {
      "title": {
        "type": "string",
        "default": "Hello Kaset"
      },
      "subtitle": {
        "type": "string",
        "default": "This is a blank plugin. Ask Kas to modify and extend it."
      }
    }
  },
  "commands": [
    {
      "id": "hello.sayHello",
      "title": "Say Hello",
      "category": "Examples",
      "description": "Show a greeting using the plugin's saved settings or parameters.",
      "parameters": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "description": "Override the title before persisting settings."
          },
          "subtitle": {
            "type": "string",
            "description": "Override the subtitle before persisting settings."
          }
        },
        "additionalProperties": false
      }
    }
  ],
  "ui": {
    "desktop": {
      "title": "Hello Kaset",
      "description": "A simple Hello Kaset plugin.",
      "icon": "Plug",
      "singleton": true,
      "defaultSize": {
        "width": 840,
        "height": 620
      },
      "window": {
        "entry": "src/window.tsx"
      }
    }
  }
}
