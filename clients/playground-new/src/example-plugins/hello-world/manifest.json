{
  "id": "hello-world",
  "name": "Hello World",
  "version": "0.1.0",
  "api": "^1.0.0",
  "entry": "index.js",
  "description": "Hello World plugin for OPFS.",
  "settingsSchema": {
    "type": "object",
    "properties": {
      "greeting": { "type": "string", "default": "Hello" },
      "recipient": { "type": "string", "default": "Kaset" }
    }
  },
  "commands": [
    {
      "id": "hello.sayHello",
      "title": "Say Hello",
      "category": "Examples",
      "description": "Show a greeting using the plugin's saved settings or parameters.",
      "parameters": {
        "type": "object",
        "properties": {
          "greeting": {
            "type": "string",
            "description": "Override the greeting text before persisting settings."
          },
          "recipient": {
            "type": "string",
            "description": "Override who should receive the greeting."
          }
        },
        "additionalProperties": false
      }
    }
  ],
  "ui": {
    "desktop": {
      "title": "Hello World",
      "description": "A simple Hello World plugin.",
      "icon": "Plug",
      "singleton": true,
      "defaultSize": { "width": 840, "height": 620 },
      "minSize": { "width": 420, "height": 320 },
      "window": {
        "entry": "src/window.tsx",
        "dependencies": {}
      }
    }
  }
}
