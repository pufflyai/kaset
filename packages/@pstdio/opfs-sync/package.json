    "@supabase/supabase-js": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "@supabase/supabase-js": "^2.48.1",
    "fake-indexeddb": "^6.2.2",
    "happy-dom": "^18.0.1",
    "vite": "^7.1.0",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4",
