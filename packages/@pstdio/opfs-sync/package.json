{
  "name": "@pstdio/opfs-sync",
  "description": "Browser-based sync engine between OPFS and remote storage (Supabase adapter included).",
  "version": "0.1.0",
  "author": "Pufflig AB",
  "email": "support@prompt.studio",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pufflyai/core-utils.git"
  },
  "scripts": {
    "prepublishOnly": "npm run build",
    "build": "tsc -b && vite build",
    "lint": "eslint \"src/**/*.{ts,tsx,js,jsx}\" --max-warnings=0",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage"
