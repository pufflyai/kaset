{
  "name": "describe-context",
  "description": "Analyze a folder and generate a compact Markdown context for LLMs or code review (library + CLI).",
  "version": "0.1.0",
  "author": "Pufflig AB",
  "email": "support@prompt.studio",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pufflyai/core-utils.git"
  },
  "scripts": {
    "prepare": "npm run build",
    "build": "tsc -b && vite build",
    "lint": "eslint \"src/**/*.{ts,tsx,js,jsx}\" --max-warnings=0",
    "visualize-bundle": "npx vite-bundle-visualizer"
  },
  "keywords": [
    "llm",
    "context",
    "documentation",
    "summarize",
    "repo-map",
    "devtools"
  ],
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "describe-context": "dist/generate-context.js"
  },
  "dependencies": {
    "common-tags": "^1.8.2",
    "json-stable-stringify": "^1.3.0",
    "nanoid": "^5.1.5"
  },
  "devDependencies": {
    "@types/common-tags": "^1.8.4",
    "typescript": "^5.7.3",
    "vite": "^7.1.0",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-svgr": "^4.3.0",
    "vitest": "^3.2.4"
  },
  "volta": {
    "node": "22.18.0"
  }
}
