{
  "name": "@pstdio/kas",
  "description": "A simple coding agent for the browser.",
  "version": "0.1.4",
  "author": "Pufflig AB",
  "email": "support@prompt.studio",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pufflyai/kaset.git"
  },
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./kas-ui": {
      "import": "./dist/kas-ui.js",
      "types": "./dist/kas-ui.d.ts"
    },
    "./opfs-tools": {
      "import": "./dist/opfs-tools.js",
      "types": "./dist/opfs-tools.d.ts"
    },
    "./plugin-tools": {
      "import": "./dist/plugin-tools.js",
      "types": "./dist/plugin-tools.d.ts"
    }
  },
  "scripts": {
    "prepublishOnly": "npm run build",
    "build": "vite build",
    "dev": "vite build --watch",
    "test": "npm run typecheck && vitest run --passWithNoTests",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "visualize-bundle": "npx vite-bundle-visualizer"
  },
  "devDependencies": {
    "@au-re/vite-plugin-externalize-deps": "^0.9.1",
    "@types/node": "^22.15.18",
    "eslint": "^9.32.0",
    "typescript": "^5.7.3",
    "vite": "^7.1.0",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@pstdio/opfs-utils": "^0.1.8",
    "@pstdio/prompt-utils": "^0.1.3",
    "@pstdio/tiny-ai-tasks": "^0.1.3",
    "@pstdio/tiny-tasks": "^0.1.3",
    "openai": "^5.15.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "volta": {
    "node": "22.18.0"
  }
}
