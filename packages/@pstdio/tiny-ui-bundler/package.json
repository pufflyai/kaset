{
  "name": "@pstdio/tiny-ui-bundler",
  "description": "Wrapper around esbuild-wasm including a service worker for in-browser caching of js code.",
  "version": "0.1.0",
  "author": "Pufflig AB",
  "email": "support@prompt.studio",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pufflyai/kaset.git"
  },
  "scripts": {
    "start": "storybook dev -p 6006",
    "storybook": "storybook dev -p 6006",
    "prepublishOnly": "npm run build",
    "build": "tsc -b && vite build",
    "lint": "eslint \"src/**/*.{ts,tsx,js,jsx}\" --max-warnings=0",
    "visualize-bundle": "npx vite-bundle-visualizer",
    "test": "vitest run --passWithNoTests"
  },
  "keywords": [],
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./sw": {
      "types": "./dist/sw.d.ts",
      "import": "./dist/sw.js"
    }
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {},
  "dependencies": {
    "esbuild-wasm": "^0.25.10"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "volta": {
    "node": "22.18.0"
  }
}
