    "storybook": "^9.1.2",
    "storybook-addon-vis": "^2.1.2",
    "vite": "^7.1.0",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@pstdio/opfs-utils": "*",
    "@pstdio/tiny-plugins": "*",
    "@pstdio/tiny-ui-bundler": "*",
